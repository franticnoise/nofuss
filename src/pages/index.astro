  <section class="p-4 w-full" >
    <MySwiper client:load />
  </section>
  
  <div class="flex justify-between items-bottom">
    <h1 class="sm:text-2xl text-xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-sky-100">
      Latest Releases
    </h1>
    <a href="/releases" class={desktopIcons}>View All</a>
    
  </div>

  <section
    id="releases"
    class="sm:flex flex my-4 items-center justify-evenly text-center sm:text-left overflow-hidden rounded-3xl"
  >
    {
      homepage
        .slice(0, 4)
        .map((homepage) => (
          <HomeFeatures
            title={homepage.title}
            releasedate={homepage.releasedate}
            url={homepage.url}
            image={homepage.image}
            artist={homepage.artist}
            icon={homepage.icon}
            content={homepage.content}
          />
        ))
    }
  </section>
 
  <section>
    <div class="flex justify-between items-bottom pt-4">
      <h1 class="sm:text-2xl text-xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-sky-100">
      Featured Artists
    </h1>
    <a href="/blog" class={desktopIcons}>View All</a>
      
    </div>
  </section>

  <section>
    <ul class="flex flex-wrap grow-0 pl-7">
      
       {
        blogs.map((post) => (        
          <ArtistCard 
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            pubDate={post.frontmatter.pubDate}
            url={post.url}
            profile_pic={post.frontmatter.profile_pic}
          />
        ))
      }
    
    </ul>
  </section>
  <Footer />
</Layout>

