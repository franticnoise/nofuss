---
export interface Props {
  title: string;
  description: string;
  pubDate: string;
  url: string | undefined;
  profile_pic: string;
}
let { title, profile_pic, description, pubDate, url } = Astro.props;
const shortDate = new Date(pubDate).toLocaleDateString("en", {
  dateStyle: "short",
});
url = url + "/";
---

<li class="flex flex-wrap gap-2 sm:grid-cols-4 leading-relaxed rounded-2xl border-zinc-700 dark:text-zinc-400">
  <a class="col-span-3 flex flex-wrap gap-2 m-1 sm:gap-4 p-0 my-2 bg-zinc-800 hover:dark:bg-zinc-700 hover:bg-zinc-200 transition duration-[.4s] rounded" href={url}>
    <span class="flex flex-col items-center justify-between mb-1">
      <img src={'thumbs/thumb_' + profile_pic} class="w-32 h-32 " />
      <h2 class="text-sm font-bold pt-1 text-black dark:text-white">{title}</h2>
    </span>
      <!-- 
        <span class="shrink-0 text-base">{shortDate}</span></span>
        <p class="text-base text-black dark:text-zinc-300">{description}</p>
      -->
  </a>
</li>
