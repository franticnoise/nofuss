---
import { Icon } from "astro-icon";

const navbar = [
  {
    name: "Home",
    href: "/",
  },
  {
    name: "Artists",
    href: "/blog",
  },
  {
    name: "Releases",
    href: "/releases",
  },
  {
    name: "About",
    href: "/about",
  },

];

const desktopIcons = "dark:text-zinc-300 hover:text-zinc-500 dark:hover:text-zinc-400 transition scale-100 hover:scale-95 duration-[.3s] hidden sm:block  text-2xl ";
const mobileIcons = "dark:text-zinc-300 hover:text-zinc-500 dark:hover:text-zinc-400 transition duration-[.7s] sm:hidden";
---

<header class="dark:bg-zinc-900 dark:bg-opacity-60 text-lg dark:text-zinc-300 mx-auto max-w-full flex justify-between">
  
  <a href="/" class="mx-8 my-5 flex" aria-label="Pleiadians Records Logo" >
    <img src="/PLEIADIAN2.png" class="w-16 " />
    <span class="self-center sm:hidden text-2xl font-bold whitespace-nowrap text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-sky-100 ml-3 mt-1">Pleiadian Records</span>
  </a>
  {
    (
      <nav class="pt-8 flex flex-row space-x-10 ">
        {navbar.map((navbar) => (
          <a href={navbar.href} class={desktopIcons}>
            {navbar.name}
          </a>
        ))}
      </nav>
    )
  }

  <button class="nav-toggle mx-8 my-5 sm:invisible" aria-label="menu button">
    <Icon name="ri:menu-4-line" class="w-8 h-8" />
  </button>
  
</header>
<header class="nav-menu hidden bg-white dark:bg-zinc-900 ">
  {
    (
      <nav class="m-8 flex flex-col inline-flex space-y-3">
        {navbar.map((navbar) => (
          <a href={navbar.href} class={mobileIcons}>
            {navbar.name}
          </a>
        ))}
      </nav>
    )
  }
</header>
